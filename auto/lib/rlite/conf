if [ $USE_RLITE = YES ]; then
    FOUND=NO

    # FreeBSD, Solaris, Linux

    ngx_feature="rlite library"
    ngx_feature_name="NGX_RLITE"
    ngx_feature_run=no
    ngx_feature_incs="#include <stdint.h>
#include <rina/api.h>"
    ngx_feature_path=
    ngx_feature_libs="-lrlite"
    ngx_feature_test="rina_open();"
    . auto/feature

    if [ $ngx_found = yes ]; then
        CORE_LIBS="$CORE_LIBS $ngx_feature_libs"
        CORE_SRCS="$CORE_SRCS $RLITE_SRCS"
        FOUND=YES
    fi

    if [ $FOUND != YES ]; then
cat << END

$0: error: rlite library not found
You can disable the module by using --without-rlite

END
        exit 1
    fi

fi
